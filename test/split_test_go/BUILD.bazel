load(
    "//tools:mro_rules.bzl",
    "mrf_test",
    "mro_library",
    "mro_test",
)
load("//test:integration_test.bzl", "integration_test")

mro_library(
    name = "disable_pipeline",
    testonly = True,
    srcs = ["disable_pipeline.mro"],
    deps = [":pipeline_stages"],
)

mro_test(
    name = "disable_pipeline_test",
    size = "small",
    srcs = [":disable_pipeline"],
)

mro_library(
    name = "pipeline",
    testonly = True,
    srcs = ["pipeline.mro"],
    deps = [":pipeline_stages"],
)

mro_test(
    name = "pipeline_test",
    size = "small",
    srcs = [":pipeline"],
)

mro_library(
    name = "pipeline_stages",
    testonly = True,
    srcs = ["pipeline_stages.mro"],
    deps = [
        "//:sum_squares",
        "//test/split_test_go/stages/report",
    ],
