    name = "pipeline_format",
    srcs = [
        ":disable_pipeline",
        ":pipeline",
    ],
)

integration_test(
    name = "split_test_go",
    config = "split_test.json",
    data = ["overrides.json"],
    expectation = glob(["expected/**"]),
    pipeline = ":pipeline",
    runner = "run_test.sh",
)

integration_test(
    name = "disable_test",
    config = "disable_test.json",
    expectation = glob(["disable_expected/**"]),
    pipeline = ":disable_pipeline",
    runner = "run_disable_test.sh",
